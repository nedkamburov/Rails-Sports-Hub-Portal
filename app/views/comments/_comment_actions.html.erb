<% if !current_user.nil? %>
<section class="comment-actions d-flex">
  <% if current_user == comment.user %>
    <div><%= link_to "Edit", edit_article_comment_path(comment) %></div>
  <% end %>
  <div>
    <%= link_to "Comment", "#", class: "subcomment-form" %>
  </div>
  <% if current_user == comment.user %>
    <div><%= button_to 'Delete', article_comment_path(comment, {article_id: comment.article}),
                       method: :delete,
                       form: { data: { turbo_confirm: "comment"} }%></div>
  <% end %>
</section>
<% end %>
