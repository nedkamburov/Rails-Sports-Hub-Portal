<h2>Forgot your password?</h2>
<h4>Enter your email address below and weâ€™ll get you back on track.</h4>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%#= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label 'Email address' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'johndoe@gmail.com', class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Request reset link", class: 'btn' %>
  </div>
<% end %>
<%= link_to "Back to Log in", new_session_path(resource_name), class: 'small-link'%>