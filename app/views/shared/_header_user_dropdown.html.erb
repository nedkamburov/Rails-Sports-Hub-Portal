<div class="dropdown user-dropdown">
  <div class="user-details">
    <% if current_user.nil? %>
      <%= login_helper('btns-no-user') %>
    <% else %>
      <div class="user-avatar">
        <%= image_tag current_user.avatar if current_user.avatar.present?%>
      </div>
      <div>
        <h5><%= current_user.name %></h5>
        <h6><%= current_user.role.capitalize %></h6>
      </div>
      <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown"></button>
      <div class="dropdown-menu header-dropdown-menu">
        <div class="user-titles">
          <h5><%= current_user.name %></h5>
          <h6><%= current_user.email %></h6>
        </div>
        <ul class="list-unstyled list-group">
          <li><%= link_to 'View profile', edit_user_registration_path %></li>
          <li><%= link_to 'Change password',  edit_user_registration_path %></li>
        </ul>
        <div class="login-logout">
          <%= login_helper('nav-link') %>
        </div>
      </div>
    <% end %>
  </div>
</div>