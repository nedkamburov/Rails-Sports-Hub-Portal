<div class="dropdown actions-dropdown dropdown-toggle">
  <button class="btn shadow-none" type="button" data-bs-toggle="dropdown">
    <%= user.access_locked? ? 'Block' : 'Activate' %>
  </button>
  <div class="dropdown-menu">
    <%= button_to user.access_locked? ? 'Block' : 'Activate', change_lock_status_admin_users_panel_path(user), class: 'dropdown-item', method: :patch %>
    <%= button_to 'Make Admin', change_admin_status_admin_users_panel_path(user), class: 'dropdown-item', method: :patch %>
    <%= button_to 'Delete', user_path, class: 'dropdown-item', method: :delete, form: { data: { turbo_confirm: user.class.name.downcase} } %>
  </div>
</div>
