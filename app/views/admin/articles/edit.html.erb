<% edit_new_article_form_options = content_tag :div do
    content_tag(:a, 'Cancel', href: admin_articles_path, class: 'btn page-action-button secondary') +
    content_tag(:button, 'Save', id:"save-article", form:"article-form", class: "btn page-action-button ms-2")
   end %>
<%= render 'admin/shared/admin_headers', page_action: edit_new_article_form_options %>
<section class="admin-articles container edit-container">
  <article class="w-100 text-end">
     <%= link_to("#{article_path(@article)}", class: "preview-btn") do %>
       <i class="fa-solid fa-eye"></i> Preview
     <% end %>
  </article>
  <%= render 'admin/articles/article_form', article: @article, action_path: admin_article_path %>
</section>