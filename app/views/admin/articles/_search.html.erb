<section class="search-mini-bar d-flex">
  <div class="" data-bs-toggle="collapse" data-bs-target="#collapseSearch">
    <i class="fa-solid fa-search"></i>
  </div>
  <div class="collapse collapse-horizontal" id="collapseSearch">
    <%= turbo_frame_tag "turbo_articles_search_frame" do %>
      <%= form_with method: :get, data: {turbo_frame:'turbo_filtered_articles_frame',
                                         controller: 'search-form',
                                         search_form_target: "form"} do |form|  %>
      <%= form.text_field :search,
                          value: params[:search],
                          placeholder: "Type here to search",
                          autofocus: true,
                          data: { action: "input->search-form#search" } %>
      <% end %>
    <% end %>
  </div>
</section>