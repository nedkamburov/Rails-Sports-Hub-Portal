<div class="dropdown actions-dropdown">
    <button class="btn shadow-none" type="button" data-bs-toggle="dropdown">
     <%= show_svg('actions-three-dots.svg') %>
    </button>
    <div class="dropdown-menu">
      <div class="second-actions">
        <%= show_svg('actions-three-dots.svg') %>
      </div>
      <div class="dropdown-item">
        <%= link_to article.status == 'published' ? t('articles.unpublish') : t('articles.publish'),
                    toggle_status_admin_article_path(article) %>
      </div>
      <div class="dropdown-item">
        <%= link_to t('general.edit'), edit_admin_article_path(article, category_slug: @category.slug) %>
      </div>
      <div class="dropdown-item">Move</div>
      <%= button_to t('general.delete'), admin_article_path(article), class: 'dropdown-item',
                    method: :delete,
                    form: { data: { turbo_confirm: "article"} }%>
    </div>
  </div>
