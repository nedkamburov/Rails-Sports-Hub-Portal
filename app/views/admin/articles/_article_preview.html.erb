<section class="article col-item" data-id=<%= article_preview.id %>>
  <article>
    <%= image_tag article_preview.picture, alt: article_preview.picture_alt if article_preview.picture.present? %>
  </article>
  <article class="article-text">
    <div class="article-headline">
      <%= article_preview.headline %>
    </div>
    <div class="article-caption">
      <%= article_preview.caption %>
    </div>
    <div class="article-footer d-flex justify-content-between">
      <div class="article-team">
        <%= Subcategory.find(article_preview.team.subcategory_id).title %> / <%= article_preview.team.title %>
      </div>
      <div class="status-icon <%= article_preview.status %>"><%= article_preview.status %></div>
    </div>
  </article>
  <%= render 'article_items_actions', article: article_preview %>
</section>